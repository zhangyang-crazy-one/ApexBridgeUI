{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ApexBridge",
  "version": "1.0.0",
  "identifier": "com.apexbridge.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build"
  },
  "app": {
    "windows": [
      {
        "title": "ApexBridge",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ApexBridge Project",
    "category": "Productivity",
    "shortDescription": "Apex Integration Platform Connecting Human and AI",
    "longDescription": "ApexBridge is an advanced AI collaboration platform that connects human intelligence with AI at the peak. Built on Tauri, it supports multiple AI agents, group conversations, and rich content rendering with elegant book-style typography.",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    }
  }
}
